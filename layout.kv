<main_screen_manager>:
    MDScreen:
        name:"main_screen"
        MDNavigationLayout:
            id: nav_layout
            MDScreenManager:
                id:main_manager
                MDScreen:
                    name:"main_space"
                    MDBoxLayout:
                        orientation: 'vertical'
                        MDTopAppBar:

                            title: "Control Total"
                            elevation: 4
                            left_action_items: [["menu", lambda x: nav_drawer.set_state()]]

                        Tipos_menu:
                            id: screen_manager
                            DashBoard:
                                id: dashboard
                                name: "dashboard"
                            TemplateScreen:
                                texto: "Hola, ¿cómo estás?"
                                name: "clientes"
                            MDScreen:
                                name: "creditos"
                                InfoScreen:
                                    texto: "Integrantes del grupo"


            MDNavigationDrawer:
                id: nav_drawer
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: "9dp"
                    spacing: "8dp"
                    MDNavigationDrawerMenu:
                        size_hint:1,.35
                        MDNavigationDrawerHeader:
                            title:"Control total"
                            md_text_color:"red"
                            text:"Menu de opciones"
                            source: "./assets/banner_icon.png"
                            spacing:"4dp"
                            padding:"12dp",0,0,0

                    ScrollView:
                        MDList:
                            ItemListMenu:
                                name: "dashboard"
                                icon: "bird"
                            ItemListMenu:
                                name: "clientes"
                                icon: "apple"
                            ItemListMenu:
                                name: "creditos"
                                icon: "information-outline"
