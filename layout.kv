<DialogContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id:nombre_empresa
        hint_text: "nombre de la empresa"

    MDTextField:
        id:tipo_empresa
        hint_text: "tipo de empresa"
<menu_empresa>:
    id:menu_empresa
    name:"menu_empresa"
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation:"horizontal"
            size_hint_y:None
            height:"50dp"
            md_bg_color:app.theme_cls.bg_normal
            MDIconButton:
                icon:"chevron-left"
                on_release: root.change()
                theme_icon_color:"Custom"
                icon_color:app.theme_cls.primary_light
            MDLabel:
                text:root.nombre
            MDLabel:
                text:root.descripcion
        MDBoxLayout:
            orientation: 'vertical'
            padding:"10dp"
            md_bg_color:app.theme_cls.primary_light
            spacing:"20dp"

            Card_type:
                id:manage_client
                tipo:"manejo de clientes"
                on_release:root.ids.manage_client.manage_client()
                img:"./assets/clientes.jpeg"
            Card_type:
                id:manage_invent
                tipo:"manejo de inventario"
                img:"./assets/inventario.png"
                on_release:root.ids.manage_invent.manage_invent()
            Card_type:
                id:manage_buy
                tipo:"manejo de compras"
                img:"./assets/compras.jpg"
                on_release:root.ids.manage_buy.manage_buy()
            Card_type:
                id:manage_provider
                tipo:"manejo de proveedores"
                img:"./assets/proveedores.png"
                on_release:root.ids.manage_provider.manage_provider()
            Card_type:
                id:manage_product
                tipo:"manejo de productos"
                img:"./assets/productos.png"
                on_release:root.ids.manage_product.manage_product()
            Card_type:
                id:manage_facture
                tipo:"manejo de facturacion"
                img:"./assets/facturacion.png"
                on_release:root.ids.manage_facture.manage_facture()
            Card_type:
                id:manage_report
                tipo:"manejo de reportes"
                img:"./assets/reportes.png"
                on_release:root.ids.manage_report.manage_report()
<Card_type>:
    ripple_behavior:True
    MDLabel:
        text:root.tipo
        halign:"center"
    FitImage:
        source:root.img

<IntegranteInfo>:
    md_bg_color:app.theme_cls.primary_light
    text: root.name
    secondary_text: root.carnet
    ImageLeftWidgetWithoutTouch:
        source: root.img
    #IconLeftWidgetWithoutTouch:
    #    icon: "face-agent"
<ItemListMenu>:
    text: root.name
    on_release:
        app.root.ids.screen_manager.current = root.name
        app.root.ids.nav_drawer.set_state()
    IconLeftWidgetWithoutTouch:
        icon: root.icon

