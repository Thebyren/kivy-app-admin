            MDLabel:
                id:label1
                text: app.nombre
            MDLabel:
                id:label2
                text: app.tipo
        MDBoxLayout:
            md_bg_color:app.theme_cls.primary_light
            orientation: 'vertical'
            spacing:"10dp"
            padding:"20dp"
            Card_client_add:
                padding:"20dp"
                spacing:"20dp"
                ripple_behavior:True
            Card_client_edit:
                padding:"20dp"
                spacing:"20dp"
                ripple_behavior:True
            Card_client_list:
                padding:"20dp"
                spacing:"20dp"
                ripple_behavior:True
            Card_client_view:
                padding:"20dp"
                spacing:"20dp"
                ripple_behavior:True
