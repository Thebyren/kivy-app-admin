<DashBoard>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing:"15dp"
        MDBoxLayout:
            size_hint: 1, .2
            pos_hint: {'center_x': 0.5,'top': 1}
            padding: "15dp"
            MDBoxLayout:
                md_bg_color: app.theme_cls.primary_dark
                radius: 20
                size_hint: 1, 0
                pos_hint: {'x': 0, 'top': 1}
                MDLabel:
                    text: "centro de empresas"
                    font_size:24
                    halign: "center"
                    theme_text_color: "Primary"
                MDIcon:
                    padding:"10dp"
                    icon:"google-analytics"

                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
        MDBoxLayout:
            size_hint:1,1
            orientation: 'vertical'
            pos_hint: {'right': 1,'top': 1}
            ScrollView:
                MDList:
                    id:lista_empresa
                    spacing:"15dp"
                    padding:"10dp"
                    TwoLineIconListItem:
                        id:texto
                        secondary_text: "agregue una nueva empresa"
                        text:"Crear nueva empresa"
                        on_release:root.presionado()
                        IconLeftWidget:
                            icon:"plus"
                            on_release: root.show_dialog()
<manage_client_screen>:
    name:"manage_client_screen"
    id:manage_client_screen
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation:"horizontal"
            size_hint_y:None
            height:"50dp"
